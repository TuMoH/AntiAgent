<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Площадью:"
            android:id="@+id/textView1" android:layout_margin="3dp" style="@style/whiteText"
        android:layout_gravity="center_vertical" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/from" android:layout_weight="1"
            android:hint="от" android:background="@drawable/et_border"
            android:layout_margin="3dp" android:singleLine="true"
            android:inputType="number" android:maxLength="4"
        android:textColor="@color/textColor" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/textView2" android:layout_margin="3dp" style="@style/whiteText"
        android:layout_gravity="center_vertical" />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/to"
              android:layout_weight="1" android:hint="до"
              android:background="@drawable/et_border" android:layout_margin="3dp" android:singleLine="true"
              android:inputType="number" android:maxLength="4"
        android:textColor="@color/textColor" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="соток"
            android:id="@+id/units" android:layout_margin="3dp" style="@style/whiteText"
        android:layout_gravity="center_vertical" />

</LinearLayout>